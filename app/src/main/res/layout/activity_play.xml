<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cristianosoriobretti.powerhourwithfriends.PlayActivity"
    android:id="@+id/play_activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false">

        <TextView
            android:layout_width="900dp"
            android:layout_height="wrap_content"
            android:id="@+id/currentSongText"
            android:layout_marginTop="100dp"
            android:textSize="30dp"
            android:layout_alignParentLeft="false"
            android:layout_alignParentStart="false"
            android:textColor="#000000"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:layout_alignWithParentIfMissing="false"
            android:gravity="center" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/playPauseButton"
            android:onClick="playClick"
            android:layout_alignParentBottom="true"
            android:background="#02B4C5"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/songLeftText"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/playPauseButton"
            android:layout_marginBottom="60dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/countDownText"
            android:textSize="75dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/back_arrow"
            android:onClick="backToPlayLists"
            android:background="#ffffff" />

    </RelativeLayout>
</RelativeLayout>
